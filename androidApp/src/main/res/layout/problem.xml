<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="12dp"
        android:layout_gravity="end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/problem_text_size" />

            <TextView
                android:id="@+id/operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="@dimen/problem_text_size" />

            <TextView
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/problem_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/suggestedResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/problem_result_text_size" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <Button
                    android:id="@+id/one"
                    android:padding="3dip"
                    android:text="1" />

                <Button
                    android:id="@+id/two"
                    android:padding="3dip"
                    android:text="2" />

                <Button
                    android:id="@+id/three"
                    android:padding="3dip"
                    android:text="3" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/four"
                    android:padding="3dip"
                    android:text="4" />

                <Button
                    android:id="@+id/five"
                    android:padding="3dip"
                    android:text="5" />

                <Button
                    android:id="@+id/six"
                    android:padding="3dip"
                    android:text="6" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/seven"
                    android:padding="3dip"
                    android:text="7" />

                <Button
                    android:id="@+id/eight"
                    android:padding="3dip"
                    android:text="8" />

                <Button
                    android:id="@+id/nine"
                    android:padding="3dip"
                    android:text="9" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/zero"
                    android:padding="3dip"
                    android:text="0" />

                <Button
                    android:id="@+id/minus"
                    android:padding="3dip"
                    android:text="-" />

                <Button
                    android:id="@+id/remove"
                    android:padding="3dip"
                    android:text="B" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="3dip"
            android:text="@string/submit" />
    </LinearLayout>
</FrameLayout>